            android:defaultValue="default"
            android:summary="%s" / -->

        <SwitchPreference
            android:key="app_profile_reader"
            android:title="@string/app_profile_reader_title"
            android:summary="@string/app_profile_reader_summary"
            android:persistent="false" />

        <SwitchPreference
            android:key="app_profile_pinned"
            android:title="@string/app_profile_pinned_title"
            android:summary="@string/app_profile_pinned_summary"
            android:defaultValue="false" />

