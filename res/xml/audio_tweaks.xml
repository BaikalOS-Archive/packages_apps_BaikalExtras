<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/audio_tweaks_title">

    <SwitchPreference
        android:key="audio_tweaks_anc"
        android:title="@string/audio_tweaks_anc_title"
        android:summary="@string/audio_tweaks_anc_summary"
        android:persistent="false" />

    <SwitchPreference
        android:key="audio_tweaks_fluence"
        android:title="@string/audio_tweaks_fluence_title"
        android:summary="@string/audio_tweaks_fluence_summary"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="audio_tweaks_suspend_play"
        android:title="@string/audio_tweaks_suspend_play_title"
        android:summary="@string/audio_tweaks_suspend_play_summary"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="audio_tweaks_whatsapp"
        android:title="@string/audio_tweaks_whatsapp_title"
        android:summary="@string/audio_tweaks_whatsapp_summary"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="audio_tweaks_hp_detect"
        android:title="@string/audio_tweaks_hp_detect_title"
        android:summary="@string/audio_tweaks_hp_detect_summary"
        android:defaultValue="false" />

</PreferenceScreen>
