<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aicpextras="http://schemas.android.com/apk/res-auto"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/performance_title">

    <!-- PreferenceCategory
        android:key="system_settings"
        android:title="@string/audio_settings_title">


    </PreferenceCategory -->

    <PreferenceCategory
        android:key="app_setings_cat"
        android:title="@string/app_settings_category">

        <Preference
            android:key="app_setings"
            android:title="@string/app_settings_title"
            android:summary="@string/app_settings_summary" >
            <intent 
                android:targetPackage="ru.baikalos.extras"
                android:targetClass="ru.baikalos.extras.AppProfilesActivity"/>
        </Preference>

        <Preference
            android:key="app_setings_backup"
            android:title="@string/app_setings_backup_title"
            android:summary="@string/app_setings_backup_summary" />

        <Preference
            android:key="app_setings_restore"
            android:title="@string/app_setings_restore_title"
            android:summary="@string/app_setings_restore_summary" />

        <Preference
            android:key="app_setings_reset"
            android:title="@string/app_setings_reset_title"
            android:summary="@string/app_setings_reset_summary" />


    </PreferenceCategory>



    <PreferenceCategory
       android:key="default_profiles"
       android:title="@string/default_profiles_title">

        <ListPreference
    	    android:key="default_perf_profile"
    	    android:title="@string/app_profile_performance_title"
    	    android:entries="@array/default_performance_listentries"
    	    android:entryValues="@array/default_performance_listvalues" 
            android:defaultValue="balance"
            android:summary="%s"/>

        <ListPreference
            android:key="default_therm_profile"
            android:title="@string/app_profile_thermal_title"
            android:entries="@array/default_thermal_listentries"
            android:entryValues="@array/default_thermal_listvalues"
            android:defaultValue="balance"
            android:summary="%s" />

        <ListPreference
    	    android:key="scr_off_perf_profile"
    	    android:title="@string/scr_off_profile_title"
    	    android:entries="@array/default_performance_listentries"
    	    android:entryValues="@array/default_performance_listvalues" 
            android:defaultValue="balance"
            android:summary="%s"/>

        <ListPreference
    	    android:key="idle_perf_profile"
    	    android:title="@string/idle_profile_title"
    	    android:entries="@array/default_performance_listentries"
    	    android:entryValues="@array/default_performance_listvalues" 
            android:defaultValue="balance"
            android:summary="%s"/>

        <ListPreference
    	    android:key="idle_therm_profile"
    	    android:title="@string/idle_therm_profile_title"
    	    android:entries="@array/default_thermal_listentries"
    	    android:entryValues="@array/default_thermal_listvalues" 
            android:defaultValue="balance"
            android:summary="%s"/>

        <ListPreference
    	    android:key="edit_perf_profile"
    	    android:title="@string/edit_perf_profile_title"
    	    android:entries="@array/default_performance_listentries"
    	    android:entryValues="@array/default_performance_listvalues" 
            android:defaultValue="balance"
            android:summary=""/>

    </PreferenceCategory>

</PreferenceScreen>
